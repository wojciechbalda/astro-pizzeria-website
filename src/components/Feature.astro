---
import { Image } from 'astro:assets';

export interface Props 
{
    heading: string;
    description: string;
    icon: ImageMetadata;
}


const {description, heading, icon} = Astro.props
---

<div>
    <div class="w-1/3 md:w-2/3 mx-auto pb-4">
        <Image class="object-cover w-full h-full" width="200" quality={40} src={icon} alt="" />
    </div>
    <div class="text-white text-center">
        <h3 class="font-bold text-2xl">{heading}</h3>
        <p class="text-lg">{description}</p>
    </div>
</div>